---
import Layout from '../layouts/Layout.astro';

interface Props {
	title: string;
	slug: string;
}

const { title, slug } = Astro.props;
---

<Layout title={title}>
	<section class='pt-[140px] pb-10 max-w-5xl mx-auto'>
		<h1 class='text-center'>
			<span class='border-b border-b-4 border-[#040404]'>Portfolio</span>
		</h1>
		<div class='w-[240px] flex mx-auto text-center'>
			<a
				href='/portfolio/sessions'
				class={`flex-1 border-r border-1 border-[#040404] z-20 ${slug === 'sessions' ? 'font-semibold bg-stone-200' : ''} hover:font-semibold`}
				>Sessions</a
			>
			<a
				href='/portfolio/retouch'
				class={`flex-1 border-l border-1 border-[#040404] z-20 ${slug === 'retouch' ? 'font-semibold bg-stone-200' : ''} hover:font-semibold`}
				>Retouch</a
			>
		</div>
		<div class='flex flex-wrap mt-2'>
			<slot />
		</div>
	</section>
</Layout>
