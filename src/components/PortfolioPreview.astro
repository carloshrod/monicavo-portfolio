---
import Image from 'astro/components/Image.astro';
---

<section class='max-w-5xl mx-auto py-10'>
	<h1 class='text-center'>
		<span class='border-b border-b-4 border-stone-800'>Portfolio</span>
	</h1>
	<div class='flex flex-wrap'>
		<div class='hover imgContainer w-full md:w-1/2 p-1 cursor-pointer'>
			<Image
				class='w-full object-cover'
				src='https://res.cloudinary.com/chrod90/image/upload/v1719945467/monicavo-portfolio/portada-es_guuexr.jpg'
				width='2000'
				height='1393'
				loading='lazy'
				alt='Cover esra session'
			/>
		</div>
		<div class='hover imgContainer w-full md:w-1/2 p-1 cursor-pointer'>
			<Image
				class='w-full object-cover'
				src='https://res.cloudinary.com/chrod90/image/upload/v1719945482/monicavo-portfolio/portada-hs_v4imrk.jpg'
				width='2000'
				height='1393'
				loading='lazy'
				alt='Cover hard session'
			/>
		</div>
		<div class='hover imgContainer w-full md:w-1/2 p-1 cursor-pointer'>
			<Image
				class='w-full object-cover'
				src='https://res.cloudinary.com/chrod90/image/upload/v1719945511/monicavo-portfolio/portada-mf_xvmerk.jpg'
				width='2000'
				height='1393'
				loading='lazy'
				alt='Cover moni session'
			/>
		</div>
		<div class='hover imgContainer w-full md:w-1/2 p-1 cursor-pointer'>
			<Image
				class='w-full object-cover'
				src='https://res.cloudinary.com/chrod90/image/upload/v1719945535/monicavo-portfolio/portada-op_ycqmxy.jpg'
				width='2000'
				height='1393'
				loading='lazy'
				alt='Cover opalo session'
			/>
		</div>
	</div>
	<div class='text-center mt-5'>
		<a
			href='/portfolio'
			class='inline-block w-72 border border-2 border-stone-800 py-2 rounded transition-all duration-300 hover:font-semibold'
			>View full portfolio</a
		>
	</div>
</section>

<style lang='scss'>
	.hover.imgContainer img {
		-webkit-filter: grayscale(0);
		filter: grayscale(0);
	}

	.hover.imgContainer:hover img {
		-webkit-filter: grayscale(100%);
		filter: grayscale(100%);
		-webkit-transition: 0.3s ease-in-out;
		transition: 0.3s ease-in-out;
	}
</style>
