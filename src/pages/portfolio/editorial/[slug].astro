---
import Layout from '../../../layouts/Layout.astro';
import editorials from '../../../../editorials.json';
import { Image } from 'astro:assets';

export function getStaticPaths() {
	return editorials.map(editorial => ({
		params: { slug: editorial.slug },
		props: { editorial: editorial?.name, pics: editorial?.pics },
	}));
}

const { editorial, pics } = Astro.props;
---

<Layout title={`${editorial} Editorial`}>
	<section class='max-w-5xl mx-auto pb-10'>
		<h2 class='pt-[140px] text-center'>
			<span class='border-b border-b-4 border-[#040404]'>{editorial}</span>
		</h2>
		<div class='flex flex-col mt-4 sm:flex-row'>
			{
				pics?.map((item, index) => (
					<>
						<div class='relative px-1 py-2 sm:w-1/2'>
							<span class='absolute bottom-4 right-6 z-50 text-xl font-medium'>
								{index % 2 === 0 ? 'Before' : 'After'}
							</span>
							<Image
								class='w-full object-cover'
								src={item}
								inferSize={true}
								loading={`${index < 4 ? 'eager' : 'lazy'}`}
								alt={`${editorial} ${index}`}
							/>
						</div>
					</>
				))
			}
		</div>
	</section>
</Layout>

<style lang='scss'>
	span {
		font-family: 'EB Garamond Variable';
		text-shadow: 1px 1px 3px rgba(255, 255, 255, 0.5);
	}
</style>
