---
import Layout from '../../../layouts/Layout.astro';
import editorials from '../../../../editorials.json';
import { Image } from 'astro:assets';

export function getStaticPaths() {
	return editorials.map(session => ({
		params: { slug: session.slug },
		props: { session: session?.name, pics: session?.pics },
	}));
}

const { session, pics } = Astro.props;
---

<Layout title={`${session} Session`}>
	<section class='max-w-5xl mx-auto pb-10'>
		<h2 class='text-center'>
			<span class='border-b border-b-4 border-[#040404]'>{session}</span>
		</h2>
		<div class='flex flex-wrap mt-4'>
			{
				pics?.map((item, index) => (
					<>
						<div
							class={`relative w-1/2 px-1 py-2 ${index % 2 === 0 ? 'imgContainer' : ''}`}
						>
							<span class='absolute bottom-4 right-6 z-50 text-xl font-medium'>
								{index % 2 === 0 ? 'Before' : 'After'}
							</span>
							<Image
								class='w-full object-cover'
								src={item}
								inferSize={true}
								loading={`${index < 4 ? 'eager' : 'lazy'}`}
								alt={`${session} ${index}`}
							/>
						</div>
					</>
				))
			}
		</div>
	</section>
</Layout>

<style lang='scss'>
	span {
		font-family: 'EB Garamond Variable';
	}
	.imgContainer {
		img {
			-webkit-filter: grayscale(100%);
			filter: grayscale(100%);
			-webkit-transition: 0.3s ease-in-out;
			transition: 0.3s ease-in-out;
		}
	}
</style>
