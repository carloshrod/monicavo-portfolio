---
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/utils';
import type { languages } from '../../i18n/ui';

const currentLang = Astro.currentLocale || 'es';

const translateLabels = useTranslations(currentLang as keyof typeof languages);

const title = translateLabels('about.title');
const text = translateLabels('about.text');
---

<Layout
	title={`MÓNICA JUVAROR - ${title}`}
	description=`Learn more about Monica Juvaror, a Colombian photographer living in Dallas, Texas. Discover her journey, inspirations, and dedication to capturing life's moments through photography. Contact Mónica for photography session bookings, retouch services and inquiries.`
>
	<section class='mt-[140px] max-w-5xl mx-auto px-4 pb-10'>
		<h2 class='text-center mb-4' transition:animate='slide'>
			<span class='border-b-4 border-[#040404]'>{title}</span>
		</h2>
		<section class='lg:flex lg:items-center lg:flex-row-reverse lg:gap-8'>
			<figure class='max-w-[500px] lg:w-1/2 mx-auto'>
				<Image
					class='shadow-[8px_8px_12px_rgba(0,0,0,0.3)]'
					src='/aboutme-img.jpg'
					width='1200'
					height='1500'
					loading='eager'
					alt='Mónica Juvaror'
				/>
			</figure>
			<div class='mt-8 lg:mt-0 lg:w-1/2'>
				<div set:html={text} />
				<a href='tel:+34664411917' class='block font-semibold italic mb-2'
					>{currentLang === 'es' ? 'Teléfono' : 'Phone'}: +34 664 41 19 17
				</a>
				<a
					href='mailto:monica@monicajuvaror.com'
					class='block font-semibold italic mb-2'
					>Email: monica@monicajuvaror.com</a
				>
				<div class='flex h-5 font-semibold italic'>
					<Image
						class='h-full'
						src='/icons/location-pin.svg'
						width='20'
						height='20'
						loading='lazy'
						alt='Instagram icon'
					/>

					<span>Almería, España</span>
				</div>
			</div>
		</section>
	</section>
</Layout>
